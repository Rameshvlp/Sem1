<html>
    <head>
    </head>
    <body>
        <script>
                let a=[1,2,3,4,5,6,7,8,9];
                let min =1000,max =0,sum=0;
                for(let i=0 ; i<a.length ; i++)
                {
                    if(a[i]>max)
                    {
                        max =a[i];
                    }
                    if(a[i]<min)
                    {
                        min =a[i];
                    }
                    sum=sum+a[i];
                }
                    document.write(`the maximum number is: ${max}`);
                    document.write(`the minimum number is: ${min}`);
                    document.write(`the sum is: ${sum}`);

            </script>
            </body>
            </html>

